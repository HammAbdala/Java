    public static void ejercicio14(){
    for (int i=1; i<= 100; i++){
        if ((i%2==0)&&(i%3==0))
        System.out.println ("El numero: " +i+ "Es divisible por 2 y por  3.");
            }
    }

    public static void ejercicio14Bis(){
        for (int i=6;i<=100;i+=6)
            System.out.println("El numero " +i+ "es divisible por 2 y por 3.");
    }

    public static void ejercicio12(int i){
        while (int i=0; i>101){
            System.out.print("Numero: " +i);
                }
    }
    public static void ejercicio13(){
        for (int i=0;i>=101;i++){
